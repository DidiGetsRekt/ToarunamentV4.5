[Statedef -4]

#esper power for text display
ignoreHitPause{
	if ((roundstate = [0,1] && roundno = 1) || (roundstate = 2 && var(26) = -1)) && map(esperPower)!=var(20){
		mapSet{
			map: "esperPower";
			value: var(20);
		}
	}
	if roundstate = 2 && var(26) != -1 && map(esperPower)!=var(26){
		mapSet{
			map: "esperPower";
			value: var(26);
		}
	}
}

