#text to display
ignoreHitPause if helper(24000),var(1)-1>=0{

	if map(esperPower) = 1.{
		text{ text: "Vector control"; font: 0;	align: ifelse(teamside=1,1,-1); pos: ifelse(teamside=1,32.5,320-32.5),37.5; scale: 0.75,0.75; color: 100+map(palfxmodifier),100+map(palfxmodifier),100+map(palfxmodifier);}
	}
	if map(esperPower) = 2.{
		text{ text: "Dark Matter"; font: 0;	align: ifelse(teamside=1,1,-1); pos: ifelse(teamside=1,32.5,320-32.5),37.5; scale: 0.75,0.75; color: 32+map(palfxmodifier),96+map(palfxmodifier),208+map(palfxmodifier);}
	} 
	if map(esperPower) = 3.{
		text{ text: "Electromaster"; font: 0;	align: ifelse(teamside=1,1,-1); pos: ifelse(teamside=1,32.5,320-32.5),37.5; scale: 0.75,0.75; color: 240+map(palfxmodifier),144+map(palfxmodifier),88+map(palfxmodifier);}
	} 
	if map(esperPower) = 4.{
		text{ text: "Meltdowner"; font: 0;	align: ifelse(teamside=1,1,-1); pos: ifelse(teamside=1,32.5,320-32.5),37.5; scale: 0.75,0.75; color: 160+map(palfxmodifier),112+map(palfxmodifier),192+map(palfxmodifier);}
	} 
	if map(esperPower) = 5.{
		text{ text: "Mental Out"; font: 0;	align: ifelse(teamside=1,1,-1); pos: ifelse(teamside=1,32.5,320-32.5),37.5; scale: 0.75,0.75; color: 232+map(palfxmodifier),192+map(palfxmodifier),64+map(palfxmodifier);}
	} 
	if map(esperPower) = 6.{
		text{ text: "???"; font: 0;	align: ifelse(teamside=1,1,-1); pos: ifelse(teamside=1,32.5,320-32.5),37.5; scale: 0.75,0.75; color: 16+map(palfxmodifier),160+map(palfxmodifier),128+map(palfxmodifier);}
	} 
	if map(esperPower) = 70.{
		text{ text: "Auto-Rebirth"; font: 0;	align: ifelse(teamside=1,1,-1); pos: ifelse(teamside=1,32.5,320-32.5),37.5; scale: 0.75,0.75; color: 0+map(palfxmodifier),192+map(palfxmodifier),0+map(palfxmodifier);}
	}
}


#phase for textdisplay based on phase from helper 24001
ignoreHitPause{
	if helper(24000),var(1)!=map(phase)+1{
		mapSet{
			map: "phase";
			value: helper(24000),var(1)-1;
		}
		mapSet{
			map: "palfxmodifier";
			value:  64 * map(phase);
		}
	}
}