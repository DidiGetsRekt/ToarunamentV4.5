; Definition file for Kung Fu Man
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Stiyl Magnus"        ;Name of character
displayname = "Stiyl Magnus (WIP)" ;Name of character to display
versiondate = 05,13,2022    ;Version date of character (MM-DD-YYYY or X.XX)
mugenversion = 1.1          ;Version of M.U.G.E.N character works on (X.XX)
ikemenversion = 1
author = "Seb368,DidiGetsRekt,Ebora (sprites)"         ;Character author name
pal.defaults = 1,2,3,4,5,6      ;Default palettes in order of preference (up to 4)
                            ;Numbering starts from 1
localcoord = 320,240        ;Local coordinate space width and height

; Files for the player
[Files]
sprite  = stiyl.sff           ;Sprite
anim    = stiyl.air           ;Animation
cmd     = stiyl.cmd           ;Command set
cns     = stiyl.cns           ;Constants
sound   = stiyl.snd           ;Sound

;for mugen
st      = stiyl.cns           ;States
st1	= stiyl_N.cns
st2	= stiyl_S.cns
st3	= stiyl_H.cns
st4	= stiyl_Helper.cns
st5	= stiyl_ex.cns
stcommon= common.cns      ;Common states (from data/ or motif)

;for ikemen go
st6	= stiyl_text.zss
font0	= jg.fnt


ai      = stiyl.ai            ;AI hints data (not used)
movelist= stiyl.dat
; Maps character selection buttons to palette numbers.
[Palette Keymap]
x = 4 ;Press button X to select palette 1, etc.
y = 5
z = 6
a = 1
b = 2
c = 3
x2 = 12 ;Hold Start and press button X for palette 7, etc.
;y2 = 8
;z2 = 9
;a2 = 10
;b2 = 11
;c2 = 12

; Arcade mode
[Arcade]
intro.storyboard = intro.def
ending.storyboard = ending.def
