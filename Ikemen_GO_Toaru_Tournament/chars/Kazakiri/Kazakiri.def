; Definition file for Kung Fu Man
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Kazakiri Hyouka"        ;Name of character
displayname = "Kazakiri Hyouka (WIP)" ;Name of character to display
versiondate = 17,02,2023    ;Version date of character (MM-DD-YYYY or X.XX)
mugenversion = 1.1          ;Version of M.U.G.E.N character works on (X.XX)
author = "DidiGetsRekt (Code), CMYOGS (Sprites)"         ;Character author name
pal.defaults = 1,2,3,4      ;Default palettes in order of preference (up to 4)
                            ;Numbering starts from 1
localcoord = 320,240        ;Local coordinate space width and height

; Files for the player
[Files]
cmd     = Kazakiri.cmd           ;Command set
cns     = Kazakiri.cns           ;Constants
st      = Kazakiri.cns           ;States
st2      = Kazakiri_N.cns           ;States
st3     = Kazakiri_S.cns           ;States
st4      = Kazakiri_H.cns           ;States
st5      = Kazakiri_Ex.cns           ;States
st6      = Kazakiri_Helper.cns           ;States
stcommon = common.cns      ;Common states (from data/ or motif)
sprite  = Kazakiri.sff           ;Sprite
anim    = Kazakiri.air           ;Animation
sound   = Kazakiri.snd           ;Sound
ai      = Kazakiri.ai            ;AI hints data (not used)
movelist= Kazakiri_Movelist.dat

; Maps character selection buttons to palette numbers.
[Palette Keymap]
a = 1 ;Press button X to select palette 1, etc.
b = 2
c = 3
x = 4
y = 5
;z = 6
;x2 = 7 ;Hold Start and press button X for palette 7, etc.
;y2 = 8
;z2 = 9
;a2 = 10
;b2 = 11
;c2 = 12

; Arcade mode
[Arcade]
intro.storyboard = intro.def
ending.storyboard = ending.def


