; Definition file for Kung Fu Man
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Mugino Shizuri"        ;Name of character
displayname = "Mugino Shizuri (WIP)" ;Name of character to display
versiondate = 27,11,2021    ;Version date of character (MM-DD-YYYY or X.XX)
mugenversion = 1.1         ;Version of M.U.G.E.N character works on (X.XX)
author = "DidiGetsRekt (Code), EntityHin (Sprites)"         ;Character author name
pal.defaults = 1,2,3,4,5      ;Default palettes in order of preference (up to 4)
                            ;Numbering starts from 1
localcoord = 320,240        ;Local coordinate space width and height

; Files for the player
[Files]
cmd     = Mugino.cmd           ;Command set
cns     = Mugino.cns           ;Constants
st      = Mugino.cns           ;States
st2	= Mugino_N.cns
st3	= Mugino_S.cns
st4	= Mugino_H.cns
st5	= Mugino_Helper.cns
stcommon = commons.cns      ;Common states (from data/ or motif)
sprite  = Mugino.sff           ;Sprite
anim    = Mugino.air           ;Animation
sound   = Mugino.snd           ;Sound
ai      = Mugino.ai            ;AI hints data (not used)
movelist = Mugino_Movelist.dat

pal1     = act/MuginoOT15Palette.act
pal2     = act/MuginoRailgunSPal.act
pal3     = act/MisakiPalette.act
pal4     = act/AradiaPalette.act
pal5     = act/MuginoPalFinalOrdered4.act

; Maps character selection buttons to palette numbers.
[Palette Keymap]
a = 1
b = 2
c = 3
x = 4 ;Press button X to select palette 1, etc.
y = 5
z = 6

x2 = 7 ;Hold Start and press button X for palette 7, etc.
;y2 = 8
;z2 = 9
;a2 = 10
;b2 = 11
;c2 = 12

; Arcade mode
;[Arcade]
;intro.storyboard = intro.def
;ending.storyboard = ending.def
