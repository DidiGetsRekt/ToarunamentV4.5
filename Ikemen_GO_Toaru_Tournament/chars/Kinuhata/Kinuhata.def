; Definition file for Kung Fu Man
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Kinuhata Saiai"        ;Name of character
displayname = "Kinuhata Saiai (WIP)" ;Name of character to display
versiondate = 11,11,2021    ;Version date of character (MM-DD-YYYY or X.XX)
mugenversion = 1.1          ;Version of M.U.G.E.N character works on (X.XX)
author = "DidiGetsRekt"         ;Character author name
pal.defaults = 1,2,3,4      ;Default palettes in order of preference (up to 4)
                            ;Numbering starts from 1
localcoord = 320,240        ;Local coordinate space width and height

; Files for the player
[Files]
cmd     = Kinuhata.cmd           ;Command set
cns     = Kinuhata.cns           ;Constants

st      = Kinuhata.cns           ;States
st1      = Kinuhata_N.cns
st2      = Kinuhata_S.cns
st3      = Kinuhata_H.cns
st4      = Kinuhata_Helper.cns



stcommon = commons.cns      ;Common states (from data/ or motif)
sprite  = Kinuhata.sff           ;Sprite
anim    = Kinuhata.air           ;Animation
sound   = Kinuhata.snd           ;Sound
ai      = Kinuhata.ai            ;AI hints data (not used)
movelist = Kinuhata.dat

; Maps character selection buttons to palette numbers.
[Palette Keymap]
x = 1 ;Press button X to select palette 1, etc.
y = 2
z = 3
a = 4
b = 5
c = 6
;x2 = 7 ;Hold Start and press button X for palette 7, etc.
;y2 = 8
;z2 = 9
;a2 = 10
;b2 = 11
;c2 = 12

; Arcade mode
[Arcade]
intro.storyboard = intro.def
ending.storyboard = ending.def
